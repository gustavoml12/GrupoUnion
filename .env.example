# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://ecosistema_user:ecosistema_pass@postgres:5432/ecosistema_union

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# SECURITY
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-chars
API_SECRET=your-api-secret-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# AWS S3 (opcional no início)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=ecosistema-union-files

# ============================================
# EMAIL (Resend - opcional no início)
# ============================================
RESEND_API_KEY=your-resend-key
EMAIL_FROM=noreply@ecosistema-union.com

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# APP
# ============================================
APP_NAME=Ecosistema Union
ENVIRONMENT=development
DEBUG=true

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000
